server {
    listen 80;
    listen [::]:80;
    server_name ${NGINX_HOSTNAME};
    
    return 301 https://$server_name:443$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name ${NGINX_HOSTNAME};
    
    ssl_certificate /certs/cert.crt;
    ssl_certificate_key /certs/cert.key;
    